{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "maxDuration": 15,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/((?!api/).*)", "dest": "public/$1" },
    { "src": "/.*\\.js", "headers": { "Content-Type": "application/javascript" } }
  ],
  "env": {
    "BASE_URL": "https://www.botnology101.com"
  }
}

